<?xml version = "1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find Ros_lidar_bot)/description/inertial_macros.xacro"/>
<xacro:include filename="inertial_macros.xacro"/>

<!-- Base link -->
<link name = "base_link">

</link>

<!--Chassis-->
<joint name = "chassis_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link= "chassis"/>
    <origin xyz = "-0.1 0 0" rpy = "0 0 0"/>
</joint>

<link name = "chassis">
    <visual>
        <origin xyz = "0.25 0 0.05" rpy = "0 0 0"/>
        <geometry>
            <box size = "0.5 0.3 0.1"/>
        </geometry>
        <material name = "blue">
            <color rgba = "0 0 1 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz = "0.25 0 0.05" rpy = "0 0 0"/>
        <geometry>
            <box size = "0.5 0.3 0.1"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.5" y="0.3" z="0.1">
        <origin xyz = "0.25 0 0.05"/>
    </xacro:inertial_box>

</link>

<!-- Left wheel -->
<joint name = "left_wheel_joint" type = "continuous">
    <parent link = "base_link"/>
    <child link = "left_wheel"/>
    <origin xyz = "0 0.2 0" rpy = "0 0 0"/>
    <axis xyz = "0 1 0"/>
</joint>

<link name = "left_wheel">
    <visual>
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
        <geometry>
            <cylinder radius = "0.05" length = "0.05"/>
        </geometry>
        <material name = "red">
            <color rgba = "1 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
        <geometry>
            <cylinder radius = "0.05" length = "0.05"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass = "0.1" length= "0.05" radius="0.05">
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
    </xacro:inertial_cylinder>
</link>


<!-- right wheel -->
<joint name = "right_wheel_joint" type = "continuous">
    <parent link = "base_link"/>
    <child link = "right_wheel"/>
    <origin xyz = "0 -0.2 0" rpy = "0 0 0"/>
    <axis xyz = "0 1 0"/>
</joint>

<link name = "right_wheel">
    <visual>
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
        <geometry>
            <cylinder radius = "0.05" length = "0.05"/>
        </geometry>
        <material name = "red"/>
    </visual>
    <collision>
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
        <geometry>
            <cylinder radius = "0.05" length = "0.05"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass = "0.1" length= "0.05" radius="0.05">
        <origin xyz = "0 0 0" rpy = "-1.5708 0 0"/>
    </xacro:inertial_cylinder>
</link>

<joint name  = "lidar_joint" type = "fixed">
    <parent link = "chassis"/>
    <child link = "lidar_link"/>
    <origin xyz = "0.1 0 0" rpy = "0 0 0"/>
</joint>

<link name = "lidar_link">
    <visual>
        <origin xyz = "0.1 0 0.1"/>
        <geometry>
            <sphere radius = "0.02"/>
        </geometry>
        <material name = "green">
            <color rgba = "0 1 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz = "0.1 0 0.1"/>
        <geometry>
            <sphere radius = "0.02"/>
        </geometry>
    </collision>
    <xacro:inertial_sphere mass = "0.01" radius="0.02">
        <origin xyz ="0.1 0 0.1"/>
    </xacro:inertial_sphere>
</link>

<joint name  = "casterwheel" type = "fixed">
    <parent link = "chassis"/>
    <child link = "caster_wheel"/>
    <origin xyz = "0.1 0 0" rpy = "0 0 0"/>
</joint>

<link name = "caster_wheel">
    <visual>
        <origin xyz = "0.3 0 0"/>
        <geometry>
            <sphere radius = "0.05"/>
        </geometry>
        <material name = "red">
            <color rgba = "1 0 0 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz = "0.3 0 0"/>
        <geometry>
            <sphere radius = "0.05"/>
        </geometry>
    </collision>
    <xacro:inertial_sphere mass = "0.04" radius="0.05">
        <origin xyz ="0.3 0 0"/>
    </xacro:inertial_sphere>
</link>


</robot>

